  margin-top: 50rpx;
  margin-left: 40rpx;
  letter-spacing: 2px;
}

.storeAdress {
  font-size: 28rpx;
  color: #fff;
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.storeCity{
  font-size: 25rpx;
  color: white;
  margin-left: 40rpx;
