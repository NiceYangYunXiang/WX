.evaluationTitleContainer {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-top: 70rpx;
  border: 2rpx solid gray;
  border-radius: 10rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.evaluationTitle {
  color: rgb(0, 172, 232);
  font-weight: bold;
  font-size: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.ruleRating,.chooesContainer {
  
  display: flex;
  flex-direction: row;
  
}

.ruleRating{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  justify-content:space-around;
}
.rucut{
  width: 20rpx;
}

.type {
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
  width: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  background-color: rgb(0, 172, 232);
  border-radius: 50%;
  text-align: center;
  color: white;
}

.chooesOne, .chooesTwo {
  height: 60rpx;
  font-weight: bold;
  color: white;
  padding-right: 10rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}

.chooesOne {
  border-radius: 30rpx 0rpx 0rpx 30rpx;
}

.chooesTwo {
  border-radius: 0rpx 30rpx 30rpx 0rpx;
}

.selected {
  background-color: rgb(0, 172, 232);
}

.btn {
  background-color: gray;
}

.evaluationTextCon{
  width: 85%;
}

.evaluation {
  margin-top: 40rpx;
  width: 100%;
  border-radius: 20rpx;
  background-color: rgb(227, 227, 227);
  margin-bottom: 20rpx;
}
.btn-area{
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 40rpx;
  justify-content:space-around;
  align-items:center;
  padding-bottom: 60rpx;
}

.formTap{
  border-color:none;
  border-radius: 30rpx;
  text-align: center;
  width: 34%;
  color: white;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  font-weight: bold;
  background-color: rgb(171, 206, 42);
  box-shadow: 5rpx 5rpx 10rpx black;
}
.forTwo{
  color: gray;
  background-color: rgb(223, 223, 223);
}

